import tkinter as tk
from tkinter import filedialog
import pandas as pd

# Initialize root Tkinter window
root = tk.Tk()
root.withdraw()

# Open file dialog to select multiple CSV files
csv_files = filedialog.askopenfilenames(filetypes=[("CSV Files", "*.csv")])

# Loop through each CSV file and read data
for csv_file in csv_files:
    # Get file name without extension
    file_name = csv_file.split("/")[-1].split(".")[0]
    # Read CSV data into DataFrame
    df = pd.read_csv(csv_file)
    # Create output file name with input file name
    output_file = f"{file_name}_output.xlsx"
    # Write DataFrame data to Excel file
    df.to_excel(output_file, index=False)

# Print confirmation message
print("Output files created successfully!")
