import csv

# Example DBFS path (update with your actual filename)
csv_file_path = '/dbfs/FileStore/tables/sample_schema.csv'

data = []

try:
    with open(csv_file_path, mode='r', newline='', encoding='utf-8') as file:
        reader = csv.DictReader(file)
        for row in reader:
            data.append((
                row['TABLE_NAME'],
                row['COLUMN_NAME'],
                row['MODIFIED_DATA_TYPE'],
                row['IN_SCOPE']
            ))

    # Print output
    print("data = [")
    for item in data:
        print(f"    {item},")
    print("]")

except FileNotFoundError:
    print(f"‚ùå File not found: {csv_file_path}")
