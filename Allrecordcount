import csv

# DBFS path to your uploaded CSV
csv_file_path = '/dbfs/FileStore/tables/sample_schema.csv'

# Output list
data = []

# Open and read the CSV
with open(csv_file_path, mode='r', newline='', encoding='utf-8') as file:
    reader = csv.DictReader(file)
    for row in reader:
        data.append((
            row['TABLE_NAME'],
            row['COLUMN_NAME'],
            row['MODIFIED_DATA_TYPE'],
            row['IN_SCOPE']
        ))

# Output the list in required format
print("data = [")
for item in data:
    print(f"    {item},")
print("]")
