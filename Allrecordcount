SELECT
    acc.OWNER,
    acc.TABLE_NAME,
    acc.COLUMN_NAME,
    acc.POSITION
FROM
    ALL_CONS_COLUMNS acc
JOIN
    ALL_CONSTRAINTS ac
    ON acc.OWNER = ac.OWNER
    AND acc.CONSTRAINT_NAME = ac.CONSTRAINT_NAME
WHERE
    ac.CONSTRAINT_TYPE = 'P'  -- Primary Key
    AND acc.TABLE_NAME = 'YOUR_TABLE_NAME'  -- uppercase
    AND acc.OWNER = 'YOUR_SCHEMA_NAME'
ORDER BY
    acc.POSITION;
