SELECT t.table_name,
       CASE 
           WHEN EXISTS (
               SELECT 1 
               FROM all_tab_columns 
               WHERE owner = 'BCR' 
                 AND table_name = t.table_name 
                 AND column_name = 'CREATETIME'
           ) THEN 'Y'
           ELSE 'N'
       END AS has_createtime
FROM all_tables t
WHERE t.owner = 'BCR';
