import os

# Define the mount folder path
mount_folder_path = "/mnt/your_folder_path"  # Replace with your actual folder path

# List all files in the mount folder
files = dbutils.fs.ls(mount_folder_path)

# Function to get file size in MB
def get_file_size(file_info):
    file_path = file_info.path
    file_size = file_info.size / (1024 * 1024)  # Convert bytes to megabytes
    return file_path, file_size

# Get file sizes using the function
file_sizes = [get_file_size(file_info) for file_info in files]

# Display the count and size of each file
for file_path, file_size in file_sizes:
    print(f"File: {file_path}, Size: {file_size:.2f} MB")
    
# Display the total number of files
print(f"Total number of files: {len(file_sizes)}")
