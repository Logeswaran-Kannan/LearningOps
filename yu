# Importing necessary libraries
from dbutils import dbutils

# Specify the mount path
mount_path = "/mnt/YOUR_MOUNT_PATH"

# List files in the mount path
files = dbutils.fs.ls(mount_path)

# Check if there are any files
if files:
    # Extract the names of the first and last files
    first_file_name = files[0].name
    last_file_name = files[-1].name

    # Display the results
    print(f"First File Name: {first_file_name}")
    print(f"Last File Name: {last_file_name}")
else:
    print("No files found in the specified mount path.")
