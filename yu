import os

def get_file_size(path):
    # Get the size of a file in MB
    return os.path.getsize(path) / (1024 * 1024)

def get_folder_size(folder_path):
    total_size = 0
    # Traverse the folder and calculate the total size
    for root, dirs, files in dbutils.fs.ls(folder_path):
        for file_info in files:
            file_path = file_info.path
            file_size = get_file_size(file_path)
            total_size += file_size
    return total_size

# Specify your Databricks mnt path
mnt_path = "/mnt/your_mount_point"

# Get the size of each file and subfolder in MB
folder_size = get_folder_size(mnt_path)

print(f"Total size of {mnt_path}: {folder_size:.2f} MB")
