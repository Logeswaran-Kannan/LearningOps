mount_path = "/mnt/your_mount_path"  # Replace with your actual mount path

# Get the list of folders in the mount path
folders = dbutils.fs.ls(mount_path)

# Initialize an empty list to store results
results = []

# Iterate through each folder
for folder in folders:
    folder_path = folder.path

    # Read Delta files in the folder
    delta_df = spark.read.format("delta").load(folder_path)

    # Get the record count
    record_count = delta_df.count()

    # Append the results to the list
    results.append((folder_path, record_count))

# Display the results
display(results)
