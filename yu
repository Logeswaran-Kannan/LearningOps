# Specify the mount path
mount_path = "/mnt/your_mount_folder"  # Replace with your actual mount path

try:
    # List files in the mount folder
    files = dbutils.fs.ls(mount_path)

    # Extract file names
    file_names = [file.name for file in files]

    if file_names:
        # Convert to DataFrame
        file_names_df = spark.createDataFrame(file_names, "string").toDF("file_name")

        # Save to an output table
        output_table = "your_output_table"  # Replace with your desired output table name
        file_names_df.write.mode("overwrite").saveAsTable(output_table)
    else:
        print("No files found in the specified mount folder.")

except Exception as e:
    print(f"Error: {str(e)}")
