# Assuming you have a mount point named 'myMountPoint' configured in Databricks
mount_point = "/mnt/myMountPoint"

# Define the file format and path within the mount point
file_format = "parquet"  # You can adjust this based on your file format
file_path = f"{mount_point}/your_data_folder/your_data_file.{file_format}"

# Read data into a DataFrame
df = spark.read.format(file_format).load(file_path)

# Display the count
count = df.count()
print(f"Number of rows in the DataFrame: {count}")
