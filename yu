# Define the folder path
mnt_folder_path = "/mnt/your_folder_path"

# List all files in the folder
file_names = dbutils.fs.ls(mnt_folder_path)

# Extract the file names
file_names_list = [file.name for file in file_names]

# Display the list of file names
print(file_names_list)

# Convert the list to a DataFrame
file_names_df = spark.createDataFrame(file_names_list, StringType()).toDF("FileNames")

# Write the DataFrame to an output table
file_names_df.write.mode("overwrite").saveAsTable("your_database.your_output_table")
