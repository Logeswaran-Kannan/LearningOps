SELECT
    CASE
        WHEN c.column_name IS NOT NULL THEN
            'SELECT ''' || t.tablename || ''' AS table_name, count(*) AS row_count FROM public.' || t.tablename ||
            ' WHERE updatetime::date = ''2025-05-29'''
        ELSE
            'SELECT ''' || t.tablename || ''' AS table_name, 0 AS row_count'
    END AS union_sql
FROM pg_tables t
LEFT JOIN information_schema.columns c
  ON c.table_schema = 'public'
 AND c.table_name = t.tablename
 AND c.column_name = 'updatetime'
WHERE t.schemaname = 'public';
