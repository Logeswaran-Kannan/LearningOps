DO
$$
DECLARE
    tbl_name TEXT;
    row_count BIGINT;
    has_createtime BOOLEAN;
    start_ts TIMESTAMP := '2025-05-12 00:00:01';
    end_ts TIMESTAMP := '2025-05-13 00:00:01';
    export_path TEXT := '/desired/export/path/'; -- CHANGE THIS TO YOUR PATH
    sql TEXT;
    input_tables TEXT[] := ARRAY['table1', 'table2']; -- ADD YOUR TABLE NAMES HERE
BEGIN
    FOREACH tbl_name IN ARRAY input_tables LOOP
        -- Check if 'createtime' column exists
        SELECT EXISTS (
            SELECT 1
            FROM information_schema.columns
            WHERE table_schema = 'public'
              AND table_name = tbl_name
              AND column_name = 'createtime'
        ) INTO has_createtime;

        IF has_createtime THEN
            EXECUTE format(
                'SELECT count(*) FROM public.%I WHERE createtime >= %L AND createtime < %L',
                tbl_name, start_ts, end_ts
            ) INTO row_count;
            RAISE NOTICE 'Table: %, Filtered Count (createtime exists): %', tbl_name, row_count;

            IF row_count > 5000 THEN
                sql := format(
                    'COPY (SELECT * FROM public.%I WHERE createtime >= %L AND createtime < %L)
                     TO %L WITH CSV HEADER',
                    tbl_name, start_ts, end_ts,
                    export_path || tbl_name || '_filtered.csv'
                );
            ELSE
                sql := format(
                    'COPY public.%I TO %L WITH CSV HEADER',
                    tbl_name,
                    export_path || tbl_name || '_full.csv'
                );
            END IF;
        ELSE
            EXECUTE format('SELECT count(*) FROM public.%I', tbl_name) INTO row_count;
            RAISE NOTICE 'Table: %, Full Count (no createtime): %', tbl_name, row_count;

            sql := format(
                'COPY public.%I TO %L WITH CSV HEADER',
                tbl_name,
                export_path || tbl_name || '_full.csv'
            );
        END IF;

        -- Execute the COPY command
        EXECUTE sql;
    END LOOP;
END;
$$;
