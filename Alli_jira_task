DO $$
DECLARE
    table_list TEXT[] := ARRAY['table1', 'table2', 'table3'];  -- Replace with your table names
    tbl TEXT;
    rec RECORD;
BEGIN
    FOREACH tbl IN ARRAY table_list
    LOOP
        FOR rec IN
            SELECT column_name
            FROM information_schema.columns
            WHERE table_schema = 'public'
              AND table_name = tbl
              AND data_type = 'boolean'
        LOOP
            RAISE NOTICE 'Table: %, Boolean Column: %', tbl, rec.column_name;
        END LOOP;
    END LOOP;
END $$;
