# Calculate pass and fail metrics
    pass_count = comparison_df.filter(comparison_df.status == "pass").count()
    fail_count = comparison_df.filter(comparison_df.status == "fail").count()
    
    # Create a pie chart for pass and fail metrics using matplotlib
    import matplotlib.pyplot as plt

    labels = ['Pass', 'Fail']
    sizes = [pass_count, fail_count]
    colors = ['green', 'red']
    plt.pie(sizes, labels=labels, colors=colors, autopct='%1.1f%%', startangle=140)
    plt.axis('equal')
    plt.title('Pass/Fail Metrics')
    plt.show()

    # Create other metrics in HTML format
    metrics_html = f"""
    <h2>Pass/Fail Metrics</h2>
    <p>Pass Count: {pass_count}</p>
    <p>Fail Count: {fail_count}</p>
    """

    # Display metrics HTML
    from IPython.display import HTML, display
    display(HTML(metrics_html))
