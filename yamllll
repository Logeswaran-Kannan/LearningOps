from pyspark.sql import SparkSession

spark = SparkSession.builder \
    .appName("YourAppName") \
    .getOrCreate()

# Read DataFrame with UTF-8 encoding
df = spark.read.option("encoding", "UTF-8").csv("your_file.csv")

# Show the DataFrame to verify the encoding
df.show()
