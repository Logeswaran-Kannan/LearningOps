def get_default_test_configuration_id():
    url = f"{azdo_base}/_apis/test/configurations?api-version=7.1"
    resp = requests.get(url, auth=auth, headers=headers)
    configs = safe_json(resp).get("value", [])

    if not configs:
        raise ValueError("‚ùå No test configurations found in Azure DevOps.")

    print("üìã Available test configurations:")
    for cfg in configs:
        print(f" - {cfg.get('name')} (ID: {cfg.get('id')})")

    for cfg in configs:
        if cfg.get("name") == "Windows 10":
            config_id = cfg.get("id")
            print(f"üõ†Ô∏è Using test configuration 'Windows 10' with ID: {config_id}")
            return config_id

    # fallback to first available config
    config_id = configs[0]['id']
    print(f"‚ö†Ô∏è 'Windows 10' not found. Using first available configuration: {configs[0]['name']} (ID: {config_id})")
    return config_id
