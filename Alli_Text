from pyspark.sql import functions as F

spark.sql("""
CREATE TABLE IF NOT EXISTS core_bld.default.monitoring_ehub_30min_metrics (
  interval_start TIMESTAMP,
  interval_end   TIMESTAMP,
  message_type   STRING,
  message_count  BIGINT,
  is_sla_breach  INT,
  run_date       DATE
)
USING DELTA
PARTITIONED BY (run_date)
""")

run_ts = F.current_timestamp()
run_date = F.current_date()

window_start = run_ts - F.expr("INTERVAL 30 MINUTES")
window_end = run_ts

interval_df = (
    spark.range(1)
    .select(F.date_trunc("minute", window_start).alias("interval_start"))
    .withColumn(
        "interval_end",
        F.col("interval_start") + F.expr("INTERVAL 30 MINUTES")
    )
)

src_df = (
    spark.table("mqs_athn_mtr.ehubstream")
    .filter(
        (F.col("TimeEnqueued") >= window_start) &
        (F.col("TimeEnqueued") < window_end)
    )
    .select(
        F.col("headers.messageType").alias("message_type")
    )
)

agg_by_type_df = (
    src_df
    .groupBy("message_type")
    .agg(F.count("*").alias("message_count"))
)

agg_all_df = (
    src_df
    .agg(F.count("*").alias("message_count"))
    .withColumn("message_type", F.lit("ALL"))
)

agg_df = agg_by_type_df.unionByName(agg_all_df)

final_df = (
    interval_df
    .crossJoin(agg_df)
    .withColumn("run_date", run_date)
)

if final_df.rdd.isEmpty():
    final_df = (
        interval_df
        .withColumn("message_type", F.lit("ALL"))
        .withColumn("message_count", F.lit(0))
        .withColumn("run_date", run_date)
    )

final_df = (
    final_df
    .withColumn(
        "is_sla_breach",
        F.when(F.col("message_count") == 0, F.lit(1)).otherwise(F.lit(0))
    )
)

(
    final_df
    .select(
        "interval_start",
        "interval_end",
        "message_type",
        "message_count",
        "is_sla_breach",
        "run_date"
    )
    .write
    .format("delta")
    .mode("append")
    .saveAsTable("core_bld.default.monitoring_ehub_30min_metrics")
)

spark.sql("""
DELETE FROM core_bld.default.monitoring_ehub_30min_metrics
WHERE run_date < current_date() - INTERVAL 2 DAYS
""")
